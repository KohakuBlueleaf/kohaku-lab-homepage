---
// src/pages/contact.astro
// Modified for static contact info

import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
// Removed ContactUs import: import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro'; // Using Features2 to list contact info

const metadata = {
  title: 'Contact Kohaku Lab',
  description:
    'Get in touch with Kohaku Lab. Find our email, address, and other contact information.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget: Title for the page -->
  <HeroText
    tagline="Contact Us"
    title="Get in Touch with Kohaku Lab"
    subtitle="We welcome inquiries regarding research collaborations, potential opportunities, or general questions about our work."
  />

  <!-- REMOVED the ContactUs Widget that contained the form -->
  <!--
  <ContactUs
    id="form"
    title="Drop us a message today!"
    ... inputs, textarea, etc ...
  />
  -->

  <!-- Features2 Widget: Displaying Contact Information -->
  <Features2
    title="Contact Information"
    subtitle="Please use the details below to reach us."
    columns={2}
    items={[
      // **REPLACE WITH YOUR ACTUAL CONTACT DETAILS**
      {
        title: 'General Inquiries',
        description: 'For general questions about Kohaku Lab and our research.',
        // Use a relevant icon
        icon: 'tabler:mail',
        // Optional: Make the description a mailto link (requires careful escaping or custom component logic)
        // description: '<a href="mailto:info@kohaku-lab.org">info@kohaku-lab.org</a>', // Be careful with HTML in descriptions
        // Or just list the email plainly:
        // description: 'Email: info@kohaku-lab.org',
      },
      {
        title: 'Collaborations',
        description: 'Interested in partnering with us? Reach out to our collaboration team.',
        icon: 'tabler:users-group', // Icon for collaboration
        // description: 'Email: partnerships@kohaku-lab.org',
      },
      {
        title: 'Media Inquiries',
        description: 'For press and media-related questions.',
        icon: 'tabler:news', // Icon for news/media
        // description: 'Email: media@kohaku-lab.org',
      },
      {
        title: 'Lab Address',
        description: '123 Innovation Drive, Suite 456, Metropolis, CA 90210', // **REPLACE ADDRESS**
        icon: 'tabler:map-pin', // Icon for location
      },
      // Example for Social Link (optional)
      {
        title: 'Follow Us on X',
        description: '@KohakuLabAI', // **REPLACE HANDLE**
        icon: 'tabler:brand-x',
        // Optional: Add a CallToAction to link directly
        // callToAction: { text: 'Go to X', href: 'https://twitter.com/KohakuLabAI', target: '_blank', variant: 'link' }
      },
      // Add other relevant contact points (e.g., specific department emails, phone if applicable)
    ]}
    classes={{
      // Optional: Add custom classes for styling if needed
      container: 'max-w-4xl mx-auto', // Center the contact info perhaps
      panel: 'p-6 rounded-md border dark:border-slate-700', // Add some styling
    }}
  />
</Layout>
