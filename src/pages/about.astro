---
// src/pages/about.astro
// Modified for Kohaku Lab

import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

// Metadata for the About page
const metadata = {
  title: 'About Kohaku Lab',
  description: 'Learn about the mission, vision, values, and research philosophy of Kohaku Lab.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget: Main Title -->
  <HeroText
    tagline="About Us"
    title="Kohaku Lab: Pioneering the Future of Intelligent Systems"
    subtitle="Dedicated to advancing the frontiers of Artificial Intelligence through fundamental research and innovative application."
  />

  <!-- Content Widget: Mission & Vision -->
  <Content
    title="Our Mission & Vision"
    subtitle="Guiding our research and development efforts."
    items={[
      {
        title: 'Mission',
        description:
          'To conduct groundbreaking research in artificial intelligence, fostering innovation and collaboration to address complex global challenges and create tangible positive impact.',
        icon: 'tabler:target', // Icon representing mission/goal
      },
      {
        title: 'Vision',
        description:
          'To be a world-leading center for AI research where diverse minds converge to shape a future where intelligent systems enhance human potential and contribute to societal well-being responsibly.',
        icon: 'tabler:eye', // Icon representing vision
      },
    ]}
    image={{
      // Consider replacing this with an image representing your lab's goals or environment
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Abstract representation of AI Vision',
    }}
  >
    <Fragment slot="content">
      {/* Optional: Add a paragraph elaborating on Mission/Vision if needed */}
    </Fragment>
    <Fragment slot="bg">
      {/* Optional background styling */}
      <div class="absolute inset-0 bg-slate-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget: Core Values -->
  <Features2
    title="Our Core Values"
    subtitle="The principles that guide our work and interactions."
    columns={3}
    items={[
      {
        title: 'Scientific Rigor',
        description:
          'Upholding the highest standards of research methodology, reproducibility, and intellectual honesty.',
        icon: 'tabler:flask', // Icon for science/rigor
      },
      {
        title: 'Collaboration',
        description:
          'Fostering an open, inclusive environment where diverse perspectives lead to breakthrough discoveries.',
        icon: 'tabler:users', // Icon for collaboration/team
      },
      {
        title: 'Innovation',
        description:
          'Encouraging creative thinking, exploration of novel ideas, and pushing the boundaries of current knowledge.',
        icon: 'tabler:bulb', // Icon for ideas/innovation
      },
      {
        title: 'Responsibility',
        description:
          'Considering the ethical implications and societal impact of our research and promoting the responsible use of AI.',
        icon: 'tabler:scale', // Icon for balance/ethics
      },
      {
        title: 'Openness',
        description:
          'Sharing our findings, code, and knowledge with the broader scientific community whenever feasible.',
        icon: 'tabler:lock-open', // Icon for openness
      },
      {
        title: 'Impact',
        description:
          'Striving to ensure our research translates into meaningful applications that benefit society.',
        icon: 'tabler:arrow-big-up-lines', // Icon for impact/growth
      },
    ]}
  >
    <Fragment slot="bg">
      {/* Optional background styling */}
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget: Research Philosophy/Approach -->
  <Content
    isReversed
    title="Our Research Approach"
    subtitle="How we tackle complex AI challenges."
    items={[
      {
        title: 'Fundamental & Applied',
        description:
          'Balancing deep theoretical exploration with the development of practical, real-world applications.',
        icon: 'tabler:atom-2', // Icon representing fundamental science
      },
      {
        title: 'Interdisciplinary',
        description:
          'Integrating insights and techniques from computer science, mathematics, neuroscience, ethics, and more.',
        icon: 'tabler:schema', // Icon representing connections/disciplines
      },
      {
        title: 'Long-Term Focus',
        description:
          'Investing in ambitious, long-term research goals alongside addressing immediate challenges.',
        icon: 'tabler:calendar-time', // Icon representing time/long-term
      },
    ]}
    image={{
      // Consider replacing this with an image representing research or collaboration
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Collaborative research environment',
    }}
  >
    <Fragment slot="content">
      <p>
        At Kohaku Lab, we believe that significant progress in AI stems from a combination of
        rigorous theoretical understanding and bold experimentation. We encourage our researchers to
        tackle difficult questions and explore uncharted territory.
      </p>
      {/* Add more paragraphs about your specific approach if needed */}
    </Fragment>
    <Fragment slot="bg">
      {/* Optional background styling */}
      <div class="absolute inset-0 bg-slate-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- CallToAction Widget: Encourage further exploration -->
  <CallToAction
    title="Explore Our Work"
    subtitle="Dive deeper into our research projects, publications, and meet the team driving innovation at Kohaku Lab."
    actions={[
      {
        variant: 'primary',
        text: 'View Projects',
        href: '/research/projects', // Link to your projects page
        icon: 'tabler:folder',
      },
      {
        variant: 'secondary',
        text: 'Meet the Team',
        href: '/team', // Link to your team page
        icon: 'tabler:users',
      },
    ]}
  />
</Layout>
