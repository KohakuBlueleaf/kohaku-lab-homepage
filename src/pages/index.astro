---
// src/pages/index.astro
// Modified for Kohaku Lab

import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
// import Note from '~/components/widgets/Note.astro'; // Removed the generic Note for now
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

// Updated metadata for Kohaku Lab
const metadata = {
  title: 'Kohaku Lab - Pioneering AI Research and Development',
  ignoreTitleTemplate: true, // Set to false if you want "Kohaku Lab - ..." using the template from config.yaml
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explore Research',
        href: '#what-we-do', // Link to the repurposed Features section
      },
      { text: 'Meet the Team', href: '#members' }, // Link to the repurposed Components section
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Kohaku Lab Abstract AI Representation' }}
  >
    <Fragment slot="title">
      Welcome to <span class="text-accent dark:text-white highlight">Kohaku Lab</span>
      <br />
      <span class="hidden xl:inline">Shaping the Future with Artificial Intelligence</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">Kohaku Lab</span> pioneers cutting-edge research and development in
      AI, focusing on creating intelligent systems that solve real-world problems and drive innovation
      across industries.
    </Fragment>
  </Hero>

  <!-- Removed Note Widget -->
  <!-- <Note /> -->

  <!-- Features Widget (Repurposed as "What We Are Doing") *************** -->
  <Features
    id="what-we-do"
    tagline="Research Areas"
    title="What We Are Doing"
    subtitle="Our research pushes the boundaries of AI, exploring fundamental questions and developing practical applications."
    items={[
      {
        title: 'Natural Language Processing',
        description:
          'Developing advanced models for understanding, generating, and interacting with human language at scale.',
        icon: 'tabler:language', // Changed icon
      },
      {
        title: 'Computer Vision',
        description:
          'Creating systems that can interpret and understand visual information from the world around us, from images to video.',
        icon: 'tabler:camera', // Changed icon
      },
      {
        title: 'Reinforcement Learning',
        description:
          'Training intelligent agents to make optimal decisions in complex environments through trial and error.',
        icon: 'tabler:robot', // Changed icon
      },
      {
        title: 'AI Ethics & Safety',
        description:
          'Investigating the societal implications of AI and developing frameworks for responsible and safe deployment.',
        icon: 'tabler:shield-check', // Changed icon
      },
      {
        title: 'Machine Learning Theory',
        description:
          'Exploring the fundamental mathematical and statistical principles underlying machine learning algorithms.',
        icon: 'tabler:calculator', // Changed icon
      },
      {
        title: 'AI for Scientific Discovery',
        description:
          'Applying AI techniques to accelerate research and discovery in fields like biology, physics, and materials science.',
        icon: 'tabler:atom-2', // Changed icon
      },
    ]}
  />

  <!-- Content Widget (Repurposed as "Project Introduction 1") **************** -->
  <Content
    isReversed
    tagline="Featured Project"
    title="Project 'Amber': Next-Generation Language Understanding"
    items={[
      {
        title: 'Core Goal',
        description:
          'To create AI models capable of nuanced, context-aware language comprehension surpassing current benchmarks.',
      },
      {
        title: 'Methodology',
        description:
          'Utilizing novel transformer architectures and large-scale, diverse datasets for pre-training and fine-tuning.',
      },
      {
        title: 'Current Status',
        description:
          'Achieved state-of-the-art results on several key NLP tasks. Preparing for open-source release.',
      },
    ]}
    image={{
      // Keeping default image as requested
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Project Amber Concept Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Advancing NLP Frontiers
      </h3>
      Project Amber aims to revolutionize how machines understand and interact using human language.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget (Repurposed as "Our Approach") **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: 'Collaborative Environment',
        description: `We foster a deeply collaborative atmosphere where researchers from diverse backgrounds share ideas freely.`,
      },
      {
        title: 'Rigorous Methodology',
        description:
          'Our research is grounded in scientific rigor, emphasizing reproducibility and thorough evaluation.',
      },
      {
        title: 'Open Research',
        description:
          'We believe in sharing our findings and code with the broader community whenever possible to accelerate progress.',
      },
      {
        title: 'Ethical Considerations',
        description:
          'Ethical implications are considered at every stage of the research and development process.',
      },
    ]}
    image={{
      // Keeping default image as requested
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Kohaku Lab Collaborative Environment',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Our Research Philosophy
      </h3>
      Discover the principles that guide our work at Kohaku Lab.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Removed the third Content Widget for brevity -->

  <!-- Steps Widget (Repurposed as "Our Research Process") ****************** -->
  <Steps
    title="Our Research Process"
    subtitle="A glimpse into how we approach innovation at Kohaku Lab."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Ideation & Exploration</span>',
        description:
          'Identifying challenging problems and exploring potential AI-driven solutions through literature review and brainstorming.',
        icon: 'tabler:bulb', // Changed icon
      },
      {
        title: 'Step 2: <span class="font-medium">Prototyping & Experimentation</span>',
        description:
          'Building initial models and conducting rigorous experiments to validate hypotheses and measure performance.',
        icon: 'tabler:flask', // Changed icon
      },
      {
        title: 'Step 3: <span class="font-medium">Analysis & Iteration</span>',
        description:
          'Analyzing results, identifying areas for improvement, and iterating on models and approaches based on findings.',
        icon: 'tabler:analyze', // Changed icon
      },
      {
        title: 'Step 4: <span class="font-medium">Publication & Deployment</span>',
        description:
          'Sharing findings through publications and potentially deploying successful models for real-world impact.',
        icon: 'tabler:upload', // Changed icon
      },
    ]}
    image={{
      // Keeping default image as requested
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Research Process illustration',
    }}
  />

  <!-- Features2 Widget (Repurposed as "Members") ************** -->
  <Features2
    id="members"
    title="Meet the Team"
    subtitle="The brilliant minds driving innovation at Kohaku Lab."
    tagline="Members"
    items={[
      {
        title: 'Dr. Evelyn Reed',
        description: 'Lead Researcher - NLP Division', // Placeholder
        icon: 'tabler:user-circle', // Changed icon
      },
      {
        title: 'Kenji Tanaka',
        description: 'Senior AI Engineer - Computer Vision', // Placeholder
        icon: 'tabler:user-circle', // Changed icon
      },
      {
        title: 'Dr. Anya Sharma',
        description: 'Research Scientist - Reinforcement Learning', // Placeholder
        icon: 'tabler:user-circle', // Changed icon
      },
      {
        title: 'Ben Carter',
        description: 'Machine Learning Engineer', // Placeholder
        icon: 'tabler:user-circle', // Changed icon
      },
      {
        title: 'Chloe Dubois',
        description: 'AI Ethics Researcher', // Placeholder
        icon: 'tabler:user-circle', // Changed icon
      },
      {
        title: 'You?',
        description: 'We are always looking for talented individuals. Join us!', // Placeholder call to action
        icon: 'tabler:user-plus', // Changed icon
      },
      // Add more members as needed
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget (Optional: Keep if lab has news/blog) ******* -->
  <BlogLatestPosts
    title="Latest News & Insights from Kohaku Lab"
    information={`Stay updated with our recent publications, breakthroughs, and thoughts on the evolving landscape of Artificial Intelligence.`}
  />

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Answers to common questions about Kohaku Lab, our research, and collaboration opportunities."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What is the primary focus of Kohaku Lab?',
        description:
          'Kohaku Lab focuses on fundamental and applied research in Artificial Intelligence, including areas like NLP, Computer Vision, Reinforcement Learning, and AI Ethics.',
      },
      {
        title: 'How is Kohaku Lab funded?',
        description:
          'Our research is supported by a combination of institutional funding, research grants, and industry collaborations. (Modify as appropriate)',
      },
      {
        title: 'Are there opportunities for collaboration?',
        description:
          'Yes, we are open to collaborations with academic institutions and industry partners. Please reach out via our contact page to discuss potential projects.',
      },
      {
        title: 'Do you offer internships or positions?',
        description:
          "We periodically have openings for researchers, engineers, and interns. Please check our 'Careers' or 'Join Us' page for current opportunities. (You'll need to create this page)",
      },
      {
        title: 'What tools and frameworks do you primarily use?',
        description:
          'Our teams utilize a variety of tools, including Python, PyTorch, TensorFlow, JAX, and high-performance computing clusters, depending on the project needs.',
      },
      {
        title: 'How can I stay updated on your research?',
        description:
          'Follow our blog/news section, subscribe to our newsletter (if applicable), or check our publications page for the latest updates.',
      },
    ]}
  />

  <!-- Stats Widget (Updated for Lab Metrics) ****************** -->
  <Stats
    title="Kohaku Lab by the Numbers"
    stats={[
      { title: 'Publications', amount: '50+' }, // Placeholder
      { title: 'Active Projects', amount: '12' }, // Placeholder
      { title: 'Team Members', amount: '25' }, // Placeholder
      { title: 'Citations', amount: '2.1K' }, // Placeholder
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Collaborate With Us',
        href: '/contact', // Assuming you have a contact page
      },
      {
        variant: 'secondary',
        text: 'Explore Publications',
        href: '/publications', // Assuming you create a publications page
      },
    ]}
  >
    <Fragment slot="title">
      Advance the Frontier of AI <br class="block sm:hidden" /> with Kohaku Lab
    </Fragment>

    <Fragment slot="subtitle">
      Interested in collaborating, joining our team, or learning more about our work? Get in touch!
    </Fragment>
  </CallToAction>
</Layout>
